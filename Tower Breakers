#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;

int main() 
{
    int T;
    cin>>T;
    while(T > 0) 
    {
    	int N, M;
    	cin>>N>>M;
    	if(M == 1) 
        {
    		cout<<"2\n";
    	} 
        else if(N % 2 == 0) 
        {
    		cout<<"2\n";
    	} 
        else 
        {
    		cout<<"1\n";
    	}
    	T--;
    }   
    return 0;
}
